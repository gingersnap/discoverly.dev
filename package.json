{
  "name": "discoverly.dev",
  "version": "1.0.0",
  "description": "A product discovery tool website built with Eleventy and Tailwind CSS",
  "type": "module",
  "scripts": {
    "dev": "run-p dev:*",
    "dev:eleventy": "eleventy --serve --quiet",
    "dev:css": "postcss ./src/assets/css/main.css -o ./_site/assets/css/style.css --watch",
    "dev:js": "vite build --watch",
    "build": "run-s clean build:*",
    "build:eleventy": "eleventy",
    "build:css": "postcss ./src/assets/css/main.css -o ./_site/assets/css/style.css --env production",
    "build:js": "vite build",
    "clean": "rm -rf _site"
  },
  "keywords": [
    "eleventy",
    "static-site",
    "product-discovery"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-plugin-handlebars": "^1.0.0",
    "@tailwindcss/cli": "^4.0.0",
    "@tailwindcss/postcss": "^4.0.0",
    "autoprefixer": "^10.4.21",
    "handlebars": "^4.7.8",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.0.0",
    "vite": "^7.0.5"
  },
  "dependencies": {
    "alpinejs": "^3.14.9",
    "lucide": "^0.525.0"
  }
}
